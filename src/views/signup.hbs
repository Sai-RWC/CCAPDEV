<link href="static/css/login.css" rel="stylesheet">
<script defer src="static/js/signup.js"></script>

<body>
  <div class="main">
    <p class="sign" align="center">Sign Up</p>
    <form id="inputForm" class="form1">
      <input id="userName" class="un" type="text" name="user" align="center" placeholder="Username" required minlength="3" maxlength="15" data-index="0" required>
      <div id="error1" class="error">{{error1}}</div>
      <!-- <input id="userMail" class="un" type="email" name="email" placeholder="Email" maxlength="254"> -->
      <!-- <div id="error2" class="error"></div> -->
      <input id="userPass" class="pass" type="password" name="pass" align="center" placeholder="Password" required minlength="5" data-index="1" required>
      <div id="error2" class="error" style="padding-bottom: 30px">{{error2}}</div>
      <a href="/" class="submit" align="center">Sign Up</a>
      <div class="try">
        <span class="signup">Already have an account? <a href="/login">Sign In</a></span>
      </div>
    </form>
  </div>
</body>
